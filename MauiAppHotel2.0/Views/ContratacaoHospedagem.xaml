<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel2._0.Views.ContratacaoHospedagem"
             Title="ContratacaoHospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="LightSteelBlue">

    <VerticalStackLayout VerticalOptions="CenterAndExpand"
                         Padding="10"
                         Margin="10">
        
        <Label 
            Text="Cálculo da Diária"
            HorizontalOptions="Center"
            FontFamily="Kalam"
            FontSize="45"
            TextColor="DarkBlue"/>

        <Frame Padding="10" BackgroundColor="LightBlue">
            <VerticalStackLayout>
                <Grid RowDefinitions="Auto, Auto"    
                     ColumnDefinitions=" *, *, 2*">

                    <Label Grid.Row="0" Grid.Column="0"
                       FontSize="17"
                       Text="Adultos:" />

                    <Label Grid.Row="0" Grid.Column="1"
                       TextColor="{StaticResource Primary}"
                       FontSize="17"
                       Text="{Binding Value}"
                       BindingContext="{x:Reference stp_adultos}"/>

                    <Stepper Grid.Row="0" Grid.Column="2"
                         x:Name="stp_adultos"
                         Minimum="1"
                         Maximum="10"
                         Increment="1"/>

                    <Label Grid.Row="1" Grid.Column="0"
                           FontSize="17"
                           Text="Crianças:"/>

                    <Label Grid.Row="1" Grid.Column="1"
                       TextColor="{StaticResource Primary}"
                       FontSize="17"
                       Text="{Binding Value}"
                       BindingContext="{x:Reference stp_criancas}"/>

                    <Stepper Grid.Row="1" Grid.Column="2"
                         x:Name="stp_criancas"
                         Minimum="0"
                         Maximum="10"
                         Increment="1"/>

                </Grid>

                <Label Text="Escolha sua suite" HorizontalOptions="Center"
                       FontSize="20"/>

                <Picker x:Name="pck_quarto"
                        Title="Selecione sua Acomodação:"
                        ItemDisplayBinding="{Binding Descricao}"/>

                <Frame Padding="10" BackgroundColor="SkyBlue"
                       Margin="10">
                    
                    <VerticalStackLayout>
                        
                        <Label Text="Período da Estadia" HorizontalOptions="Center"
                               FontSize="20"/>

                        <HorizontalStackLayout>
                            <Label Text="Check-in: " FontSize="15"
                                   VerticalOptions="Center"/>
                            
                            <DatePicker x:Name="dtpck_checkin"
                                        DateSelected="dtpck_checkin_DateSelected"
                                        Format="dd/MM/yyyy"/>
                               
                        </HorizontalStackLayout>

                        <HorizontalStackLayout>
                            <Label Text="Check-out:" FontSize="15"
                                   VerticalOptions="Center"/>
                            
                            <DatePicker x:Name="dtpck_checkout"
                                    Format="dd/MM/yyyy"/>
                            
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                </Frame>

                <Button Text="Avançar" HorizontalOptions="End"
                        Clicked="Button_Clicked" BackgroundColor="DarkBlue"/>

            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>